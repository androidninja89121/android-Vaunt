<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/header_logo_triangle" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:id="@+id/imgvHeaderLogo"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:src="@drawable/header_logo_text" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:layout_below="@+id/imgvHeaderLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_above="@+id/textView"
        android:layout_marginBottom="20dp"
        android:background="@drawable/kevin_hart"
        android:src="@drawable/kevin_hart" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enjoy exclusive access to your favorite personalities and experience their lives as they do."
        android:id="@+id/textView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="12dp"
        android:typeface="serif" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_button_min_height_material"
        android:text="Login with Email"
        android:id="@+id/btn_login"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_red"
        android:gravity="center"
        android:textColor="@color/white"
        android:typeface="serif" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_button_min_height_material"
        android:text="Sign Up"
        android:id="@+id/btn_register"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_gray"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_below="@+id/btn_login"
        android:layout_centerHorizontal="true"
        android:typeface="serif" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Downloaded through PlayStore?"
            android:id="@+id/textView4"
            android:layout_gravity="bottom"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:typeface="serif" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restore Download"
            android:id="@+id/textView5"
            android:layout_gravity="bottom"
            android:textColor="@color/blue"
            android:textSize="12dp"
            android:layout_marginLeft="5dp"
            android:typeface="serif" />
    </LinearLayout>

</RelativeLayout>