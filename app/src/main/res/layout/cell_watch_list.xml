<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/black">
    <view
        android:layout_width="100dp"
        android:layout_height="100dp"
        class="android.vaunt.ui.DynamicImageView"
        android:id="@+id/content_image"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/content_image"
        android:layout_toRightOf="@+id/content_image"
        android:layout_toEndOf="@+id/content_image"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="37dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Runway"
            android:id="@+id/tvLabel"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Runway is as close-up look at the lifestyles of the most desirable women in the world.Episodes are a series of short films with exclusive access into..."
            android:id="@+id/tvText"
            android:layout_below="@+id/tvLabel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin" />
    </RelativeLayout>

</RelativeLayout>
