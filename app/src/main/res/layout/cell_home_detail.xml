<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/black">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imgvPhoto"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgvCover"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/imgvPhoto"
        android:layout_alignLeft="@+id/imgvPhoto"
        android:layout_alignBottom="@+id/imgvPhoto"
        android:layout_alignRight="@+id/imgvPhoto"
        android:background="#32ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Content title Lorem ipsum dolor sit amet, sapien"
        android:id="@+id/tvText"
        android:layout_below="@+id/imgvPhoto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/white"
        android:textSize="13dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Persona"
        android:id="@+id/tvTitle"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_below="@+id/tvText"
        android:layout_marginBottom="10dp" />

    <ImageView
        android:layout_width="12dp"
        android:layout_height="20dp"
        android:id="@+id/imgvLoc"
        android:layout_below="@+id/tvText"
        android:layout_toRightOf="@+id/tvTitle"
        android:layout_toEndOf="@+id/tvTitle"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_loc" />
</RelativeLayout>
