<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:typeface">serif</item>
        <item name="actionSheetStyle">@style/ActionSheetStyleiOS7</item>
    </style>

    <style name="CircularBarPagerStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>

        <item name="progress_arc_max">100</item>
        <item name="arc_progress">20</item>



        <item name="progress_arc_clockwise_outline_width">0.75dp</item>
        <item name="progress_arc_counter_clockwise_outline_width">0.75dp</item>
        <item name="progress_arc_clockwise_width">8dp</item>
        <item name="progress_arc_counter_clockwise_width">8dp</item>

        <item name="progress_start_line_enabled">false</item>
        <item name="progress_pager_on_click_enabled">true</item>
        <item name="progress_pager_fill_circle_color">#00000000</item>
    </style>

    <style name="CircularBarPager_Default">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>

        <item name="progress_arc_max">100</item>
        <item name="arc_progress">0</item>

        <item name="progress_arc_clockwise_outline_color">#555555</item>
        <item name="progress_arc_clockwise_color">#f1592a</item>
        <item name="progress_arc_counter_clockwise_outline_color">#f1592a</item>
        <item name="progress_arc_counter_clockwise_color">#f1592a</item>
        <item name="progress_start_line_enabled">false</item>
        <item name="progress_arc_clockwise_outline_width">5dp</item>
        <item name="progress_arc_counter_clockwise_outline_width">5dp</item>
        <item name="progress_arc_clockwise_width">5dp</item>
        <item name="progress_arc_counter_clockwise_width">5dp</item>

        <item name="progress_pager_on_click_enabled">true</item>
    </style>

    <!-- iOS7 Style -->
    <style name="ActionSheetStyleiOS7">
        <item name="actionSheetBackground">@android:color/transparent</item>
        <item name="cancelButtonBackground">@drawable/slt_as_ios7_cancel_bt</item>
        <item name="otherButtonTopBackground">@drawable/slt_as_ios7_other_bt_top</item>
        <item name="otherButtonMiddleBackground">@drawable/slt_as_ios7_other_bt_middle</item>
        <item name="otherButtonBottomBackground">@drawable/slt_as_ios7_other_bt_bottom</item>
        <item name="otherButtonSingleBackground">@drawable/slt_as_ios7_other_bt_single</item>
        <item name="cancelButtonTextColor">#5c90cc</item>
        <item name="otherButtonTextColor">#5c90cc</item>
        <item name="actionSheetPadding">10dp</item>
        <item name="otherButtonSpacing">0dp</item>
        <item name="cancelButtonMarginTop">10dp</item>
        <item name="actionSheetTextSize">15sp</item>
    </style>
</resources>
